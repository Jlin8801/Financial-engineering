import math

m = 12 #annual compound basis

principle = int(input())*10000
period = int(input())*m
interest_rate = float(input())/100

month_P_payment = math.ceil(principle/period)

#Basic information
print("本金          %15d元" % principle)
print("期數          %15d年" % (period//m))
print("年利率        %15d％" % (interest_rate*100))

interest = round(principle*(interest_rate/m))

print("平均每月攤還本金%15d元" % interest)
print("")

#first period = 
TTA = month_P_payment + interest
print("%10s%10s%10s%10s" % ("期數","支付本金","支付利息","累積支付"))
print("%11d%13d%13d%12d" % (1, month_P_payment, interest, TTA)) #which period

Cinterest = interest

for i in range(period-2):
	principle = principle - month_P_payment
	interest = round(principle * (interest_rate/m))

	TTA = TTA + month_P_payment + interest
	print("%11d%13d%13d%12d" % (i+2, month_P_payment, interest, TTA))
	Cinterest += interest

#Last period
month_P_payment = principle - month_P_payment 
principle = month_P_payment #due to the ceiling effect, the left amount will be all we need to pay for the principle, which will be less than previous months.
interest = round(principle*(interest_rate/m))
TTA = TTA + month_P_payment + interest

print("%11d%13d%13d%12d" % (period, month_P_payment, interest, TTA))

Cinterest += interest
print("")
print("全部利息  %d元" % Cinterest)
